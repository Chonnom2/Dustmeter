<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/Ttemp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="72dp"
            android:layout_marginRight="233dp"
            android:layout_marginBottom="252dp"
            android:text="온도"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Tdust"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="313dp"
            android:text="미세먼지"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvTempValue"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="252dp"
            android:text="온도 값"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TvHumValue"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="193dp"
            android:text="습도 값"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TvRecText"
            android:layout_width="326dp"
            android:layout_height="109dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/Thum"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="73dp"
            android:layout_marginRight="231dp"
            android:layout_marginBottom="193dp"
            android:text="습도"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TvDustValue"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="313dp"
            android:text="먼지 값"
            android:textColor="#000000"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/BtnBluetooth"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:tint="#000000"
            app:srcCompat="@drawable/ic_baseline_bluetooth_24" />

        <ImageButton
            android:id="@+id/BtnMenu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:tint="#000000"
            app:srcCompat="@drawable/ic_baseline_dehaze_24" />

        <ImageView
            android:id="@+id/IvEmotion"
            android:layout_width="239dp"
            android:layout_height="230dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="435dp"
            android:background="#00000000"
            android:tint="#000000"
            app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#C8C8C8"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="메뉴"
            android:textSize="24sp" />

        <View
            android:background="#99ffffff"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent" android:layout_height="3dp"/>

        <TextView
            android:id="@+id/TvMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장된 위치 확인"
            android:textSize="15sp"
            />

        <View
            android:background="#99ffffff"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent" android:layout_height="3dp"/>

        <TextView
            android:id="@+id/TvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위치 등록"
            android:textSize="15sp"
            />
        <View
            android:background="#99ffffff"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent" android:layout_height="3dp"/>

        <TextView
            android:id="@+id/TvTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textSize="15sp"
            />
        <View
            android:background="#99ffffff"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent" android:layout_height="3dp"/>


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
